{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
