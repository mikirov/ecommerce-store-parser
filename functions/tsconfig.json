{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./src/**/*"]
}
